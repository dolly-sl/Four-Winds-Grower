{% section 'account-banner' %}
{% include 'interior-title', title: "RESET PASSWORD" %}
<section class="account-page">
    <div class="container" id="account-page">
        {% form 'reset_customer_password' %}
            {% if form.errors %}
                <div class="account-input-div">
                    {{ form.errors | default_errors }}
                </div>
             {% endif %}

            <div class="account-input-div">
                <input type="password" name="customer[password]" placeholder="Password">
            </div>
            <div class="account-input-div">
                <input type="password" name="customer[password_confirmation]" placeholder="Confirm Password">
            </div>
            <div class="account-input-div">
                <button type="submit" class="theme-button">
                    RESET PASSWORD
                </button>
            </div>
        {% endform %}
    </div>
</section>