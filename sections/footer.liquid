<footer class="desktop">
  <div class="container">
    <div class="m-footer_container">
      <div class="l-table m-footer_table">
        <div class="l-table_row">
          <section class="l-table_cell m-footer_section">
            <div class="m-footer_section--padding">
              {% if section.settings.shop_list %}
                <div class="m-footer_subsection">
                  <span style="display:block;" class="m-footer_subheader">Shop</span>
                  {% include 'footer-menu', currList: section.settings.shop_list %}
                </div>
              {% endif %}
            </div>
          </section>
          <section class="l-table_cell m-footer_section">
            <div class="m-footer_section--padding">
              {% if section.settings.learn_list %}
                <div class="m-footer_subsection">
                  <h4 class="m-footer_subheader">Learn</h4>
                  {% include 'footer-menu', currList: section.settings.learn_list %}
                </div>
              {% endif %}
              {% if section.settings.about_list %}
                <div class="m-footer_subsection">
                  <h4 class="m-footer_subheader">About</h4>
                  {% include 'footer-menu', currList: section.settings.about_list %}
                </div>
              {% endif %}
              {% if section.settings.general_list %}
                <div class="m-footer_subsection">
                  <h4 class="m-footer_subheader">General Info</h4>
                  {% include 'footer-menu', currList: section.settings.general_list %}
                </div>
              {% endif %}
            </div>
          </section>
          <section class="l-table_cell m-footer_section">
            <div class="m-footer_section--padding">
              <div class="m-footer_subsection">
                <h4 class="m-footer_subheader">CONTACT US:</h4>
              </div>
              {% if section.settings.contact_us_phone %}
                <div class="m-footer_subsection">
                  <h4 class="m-footer_subheader">Phone</h4>
                  <a href="tel:{{ section.settings.phone-link }}" class="m-footer_menu-item">
                    {{- section.settings.contact_us_phone -}}
                  </a>
                </div>
              {% endif %}
              {% if section.settings.contact_us_email %}
                <div class="m-footer_subsection">
                  <h4 class="m-footer_subheader">Email</h4>
                  <a class="m-footer_menu-item" href="mailto:{{section.settings.contact_us_email}}">
                    {{ section.settings.contact_us_email }}
                  </a>
                </div>
              {% endif %}
              <div class="m-footer_subsection">
                {% include 'social-media', className: 'm-footer_social' %}
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
  <section class="m-copyright l-text_center">
    &copy;{{ 'now' | date: '%Y' }} All Rights Reserved Four Winds
    Growers&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;<a
      rel="nofollow"
      href="https://shopify.com?ref=sleepless-media"
      >Powered By Shopify</a
    >&nbsp;&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;&nbsp;Web Design by
    <a href="https://www.sleeplessmedia.com/services/shopify-web-design/" target="_blank">Sleepless Media</a>
  </section>
</footer>
