{% schema %}
{
  "name": "Chart Blocks",
  "settings": [
    {
      "id": "chartName",
      "type": "text",
      "label": "chartName",
      "default": "Citrus Variety Info Chart"
    },
	{
		"id": "banner-background",
		"type": "image_picker",
		"label": "Banner Background"
	},
	{
		"id": "section-title",
		"type": "text",
		"label": "Page Title",
		"default": "Contact Us"
	},
	{
		"id": "menu-list",
		"type": "link_list",
		"label": "Side Menu Link List",
		"info": "The title is taken from the first word of the link list title. It removes 'Side Menu' from the list title"
	}
  ],
  "blocks": [
    {
      "type": "select",
      "name": "Add Button",
      "settings": [
		{
          "id": "type",
          "type": "text",
          "label": "type",
          "default": "Sweet Oranges"
        },
        {
          "id": "variety",
          "type": "text",
          "label": "variety",
          "default": "Washington Navel Orange"
        },
		{
          "id": "height",
          "type": "text",
          "label": "height",
          "default": "8'-12'"
        },
		{
          "id": "bloomSeason",
          "type": "text",
          "label": "bloomSeason",
          "default": "Spring"
        },
		{
          "id": "fruitSeason",
          "type": "text",
          "label": "fruitSeason",
          "default": "Winter"
        },
		{
          "id": "heat",
          "type": "checkbox",
          "label": "heat",
          "default": true
        },
		{
          "id": "temp",
          "type": "text",
          "label": "temp",
          "default": "28"
        },
		{
          "id": "indoor",
          "type": "checkbox",
          "label": "indoor",
          "default": true
        }
      ]
    }
  ]
}
{% endschema %}

