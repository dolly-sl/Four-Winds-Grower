{% schema %}
{
	"name": "Testimonials",
	"settings": [
		{
			"id": "banner-background",
			"type": "image_picker",
			"label": "Banner Background"
		},
		{
			"id": "section-title",
			"type": "text",
			"label": "Page Title",
			"default": "Customer Testimonials"
		},
		{
			"id": "menu-list",
			"type": "link_list",
			"label": "Side Menu Link List",
			"info": "The title is taken from the first word of the link list title. It removes 'Side Menu' from the list title"
		},
		{
			"id": "top-message",
			"type": "textarea",
			"label": "Top Message"
		}
	],
	"blocks": [
		{
			"name": "Testimonials",
			"type": "customer_testimonials",
			"settings": [
				{
					"id": "name",
					"type": "text",
					"label": "Name"
				},
				{
					"id": "location",
					"type": "text",
					"label": "Location"
				},
				{
					"id": "message",
					"type": "textarea",
					"label": "Message"
				}
			]
		}
	]
}
{% endschema %}

{% include 'page-banner', background: section.settings.banner-background %}
{% include 'interior-title', title: section.settings.section-title %}
<section id="testimonials" class="interior-page">
	<div class="container">
		<div class="row">
			<div class="col-md-3">
				{% include 'interior-side-menu', list: section.settings.menu-list %}
			</div>
			<div class="col-md-9">
				<p class="top-message">{{ section.settings.top-message }}</p>
				{% for block in section.blocks %}
					<div class="testimonial">
						<article>{{ block.settings.message | newline_to_br }}</article>
						<div class="name">
							<h6>{{ block.settings.name }}</h6>
							<h6>{{ block.settings.location }}</h6>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</div>
</section>